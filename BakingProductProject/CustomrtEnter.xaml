<Page x:Class="BakingProductProject.CustomrtEnter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BakingProductProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomrtEnter">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="שלום ל"/>
            <TextBlock x:Name="txtName"/>
            <StackPanel>
        </StackPanel   >
            <StackPanel Grid.Row="1" Orientation="Horizontal"/>
            <Button Content="מתכונים"/>
            <Button Content="מוצרים"/>
            <!--<Button Content="סל הקניות שלי" Click="Button_Click_2"/>-->
            <Button Content="פרטים אישיים" Click="Button_Click"/>
            <Button Content="התנתק" Click="Button_Click_1"/>
        </StackPanel >
        <Frame Grid.Row="2" x:Name="myFrame"/>
        
    </Grid>
</Page>
